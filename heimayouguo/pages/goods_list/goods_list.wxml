<!--pages/goods_list/goods_list.wxml-->
<view class="container">
  <!-- 搜索框 组件 -->
  <Search></Search>
  <!-- tabs 组件 -->
  <Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
    <block wx:if="{{tabs[0].isActive}}">
      <view class="first_tab">
        <navigator class="goods_item">
          <!-- 左侧 图片容器 -->
          <view class="goods_img_wrap">
            <image mode="widthFix"
              src="http://image2.suning.cn/uimg/b2c/newcatentries/0000000000-000000000826147951_1_400x400.jpg"></image>
          </view>
          <!-- 右侧 商品容器 -->
          <view class="goods_info_wrap">
            <view class="goods_name">TCL 65Q960C 65英寸 哈曼卡顿 人工智能 金属超薄 64位34核 4K+HDR 原色量子点 曲面电视（灰色）</view>
            <view class="goods_price">￥9988.00</view>
          </view>
        </navigator>
        <navigator class="goods_item">
          <!-- 左侧 图片容器 -->
          <view class="goods_img_wrap">
            <image mode="widthFix"
              src="http://image2.suning.cn/uimg/b2c/newcatentries/0000000000-000000000826147951_1_400x400.jpg"></image>
          </view>
          <!-- 右侧 商品容器 -->
          <view class="goods_info_wrap">
            <view class="goods_name">TCL 65Q960C 65英寸 哈曼卡顿 人工智能 金属超薄 64位34核 4K+HDR 原色量子点 曲面电视（灰色）</view>
            <view class="goods_price">￥9988.00</view>
          </view>
        </navigator>
      </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">1</block>
    <block wx:elif="{{tabs[2].isActive}}">2</block>
  </Tabs>
</view>