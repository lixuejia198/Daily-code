/* pages/goods_list/goods_list.wxss */
.goods_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}

.goods_img_wrap {
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods_img_wrap image {
  width: 80%;
}

.goods_info_wrap {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.goods_name {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_price {
  color: #D81E06;
}