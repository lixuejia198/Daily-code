/**index.wxss**/
.swiper-show {
  margin-top: 106rpx;
}

.swiper-show swiper {
  height: 350rpx;
}

.swiper-show navigator,
.swiper-show image {
  width: 100%;
  height: 100%;
}

.category-item {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 0;
}

.category-item image {
  width: 128rpx;
  height: 140rpx;
}

.floor-item-title {
  display: block;
  height: 50rpx;
  width: 640rpx;
}

.floor-item-pic {
  float: left;
  height: 190rpx;
  margin: 8rpx;
  margin-top: 0;
}

.floor-item-pic:nth-child(1) {
  height: 390rpx;
}